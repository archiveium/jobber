{
    "git": {
      "commitMessage": "chore: release v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": false,
      "versionArgs": [
        "--allow-same-version"
      ]
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/bumper": {
        "in": "package.json",
        "out": "package.json"
      }
    }
  }