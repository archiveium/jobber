{
  "git": {
    "commitMessage": "chore: release ${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": false,
    "versionArgs": [
      "--allow-same-version"
    ]
  },
  "github": {
    "release": true,
    "tokenRef": "PERSONAL_ACCESS_TOKEN"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json"
    }
  }
}